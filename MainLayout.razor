@using Trackor.Features.Theme
@inherits FluxorLayout

@using Trackor.Features.Database

@inject IState<ThemeState> ThemeState
@inject IDispatcher Dispatcher

<MudThemeProvider Theme="ThemeState.Value.Theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => drawerOpen = !drawerOpen)" />
        <MudText Typo="Typo.h6">Trackor</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/eric-king/trackor/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="6">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    bool drawerOpen = false;

    protected override void OnInitialized()
    {
        Dispatcher.Dispatch(new DatabaseLoadDbCacheModuleAction());
        base.OnInitialized();
    }
}