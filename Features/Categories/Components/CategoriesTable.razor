@inherits FluxorComponent

@inject IDispatcher Dispatcher
@inject IState<CategoriesState> CategoriesState

<MudTable Items="@(CategoriesState.Value.Categories)" Hover="true" Elevation="6" Class="mb-12">
    <ColGroup>
        <col style="width: 70%;" />
        <col style="width: 15%;" />
        <col style="width: 15%;" />
    </ColGroup>
    <HeaderContent>
        <MudTh>Title</MudTh>
        <MudTh>Active</MudTh>
        <MudTh Style="text-align:center"><MudIcon Icon="@Icons.Filled.Construction"></MudIcon></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Title">@context.Title</MudTd>
        <MudTd DataLabel="Active">
            <ActiveInactiveLabel IsActive="context.Active" />
        </MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Filled.Delete" Color="Color.Error" OnClick="() => DeleteCategory(context)" Title="Delete"></MudIconButton>
            <MudIconButton Icon="@Icons.Filled.ContentCopy" OnClick="() => EditCategory(context, copyOnly: true)" Title="Copy as New"></MudIconButton>
            <MudIconButton Icon="@Icons.Filled.Edit" OnClick="() => EditCategory(context)" Title="Edit"></MudIconButton>
        </MudTd>
    </RowTemplate>
</MudTable>

@code {
    private void EditCategory(Category category, bool copyOnly = false)
    {
        Dispatcher.Dispatch(new CategoriesEditCategoryAction(category, copyOnly));
    }

    private void DeleteCategory(Category category)
    {
        Dispatcher.Dispatch(new CategoriesDeleteAction(category));
    }
}
